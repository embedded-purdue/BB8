menu "BB8 Firmware"
config BB8_SAMPLE_HZ
    int "IMU sample rate (Hz)"
    range 25 1000
    default 200

choice
    prompt "Fusion algorithm"
    default BB8_FUSION_MADGWICK
    help
        Select the default orientation fusion algorithm.
config BB8_FUSION_MADGWICK
    bool "Madgwick (fast, good default)"
config BB8_FUSION_MAHONY
    bool "Mahony"
endchoice

config BB8_ENABLE_BLE
    bool "Enable BLE services (stubs)"
    default n

config BB8_ENABLE_STORAGE
    bool "Enable storage (stubs)"
    default n
endmenu
